<%- include('../partials/header') %>

<section id="show-page">
  <div>Day:</div>
  <div><%= task.day %></div>
  <div>Task: </div>
  <div><%= task.task %></div>
  <div>Category: </div>
  <div><%= task.category %></div>

  
</section>
<br><br><h2>Notes</h2>
<form id="add-note-form" method="POST"
  action="/tasks/<%= task._id %>/notes">
  <label>Note:</label>
  <textarea name="content"></textarea>
  
  <input type="submit" value="Add Note">
</form>

<% if (task.notes.length) { %>
  <table>
    <thead>
      <tr>
        <th>Note</th>
      </tr>
    </thead>
      <% task.notes.forEach(function(t) { %>
        <tr>
          <td><%= t.content %></td>
          <td>
              <form action="/notes/<%= t._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / task.notes.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Notes Yet</h5>
<% } %>
  
<form id="new-form" action="/tasks" method="POST">
  <label>Mental Health Check:</label>
   <select name="mentalStatus">
     <option value="Calm">Calm</option>
     <option value="Happy">Happy</option>
     <option value="Overwhelmed">Overwhelmed</option>
     <option value="Nervous">Nervous</option>
     <option value="Sad">Sad</option>
     <option value="Angry">Angry</option>
    </select>
</form>

<%- include('../partials/footer') %>
